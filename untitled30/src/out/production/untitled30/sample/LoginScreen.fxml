<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginScreen">
    <children>
        <GridPane layoutX="160.0" layoutY="139.0" prefHeight="68.0" prefWidth="273.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="144.0" minWidth="10.0" prefWidth="111.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="213.0" minWidth="10.0" prefWidth="162.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="73.0" minHeight="10.0" prefHeight="37.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="74.0" minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Username">
                    <font>
                        <Font name="Britannic Bold" size="13.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Password" GridPane.rowIndex="1">
                    <font>
                        <Font name="Britannic Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="username" prefHeight="25.0" prefWidth="177.0" promptText="username" GridPane.columnIndex="1" />
                <TextField fx:id="password" prefHeight="25.0" prefWidth="148.0" promptText="password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
        </GridPane>
        <Button fx:id="login" layoutX="481.0" layoutY="285.0" mnemonicParsing="false" onAction="#Login" text="LogIN">
            <font>
                <Font name="Britannic Bold" size="12.0" />
            </font>
        </Button>
        <Label fx:id="page" alignment="CENTER" contentDisplay="CENTER" layoutX="331.0" layoutY="69.0" prefHeight="37.0" prefWidth="273.0" text="LOGIN PAGE">
            <font>
                <Font name="Broadway" size="12.0" />
            </font>
        </Label>
      <Button layoutX="399.0" layoutY="285.0" mnemonicParsing="false" onAction="#back" text="back" />
      <Label fx:id="error" layoutX="295.0" layoutY="362.0" prefHeight="37.0" prefWidth="295.0" />
      <Label fx:id="login_display"  layoutX="454.0" layoutY="106.0" />
    </children>
</AnchorPane>
